<div class="modal fade" role="dialog" id="appointmentInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="appointmentForm" autocomplete="off" novalidate="novalidate">
                <div class="modal-header">
                    <h4 class="modal-title">Toevoegen/wijzigen afspraak</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="customerId">Selecteer Klant</label>
                        <select id="customerId"
                                asp-items="@(new SelectList(ViewBag.CustomerList, "Id", "Name"))"
                                class="form-control"></select>
                    </div>
                    @*the vehicle in the form.
                        TODO: add a vehicle registration page.*@
                    <div class="form-group">
                        <label for="vehicle">Vervoersmiddel</label>
                        <input class="form-control" id="vehicle" />
                    </div>
                    
                    <div class="form-group">
                        <label for="appointmentDate">Datum afspraak</label>
                        <input class="form-control" id="appointmentDate" />
                    </div>
                    
                    <input type="hidden" id="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnClose" class="btn btn-secondary" onclick="onCloseModal();">Sluit</button> &nbsp;
                    <button type="button" id="btnSubmit" class="btn btn-success" onclick="onSubmitForm();">Opslaan</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/script-custom-calender.js"></script>
}