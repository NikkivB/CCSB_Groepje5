@if (User.IsInRole("Beheerder"))
{

<div class="row">
    <div class="offset-4 col-md-4">     
        <h1>Alle voertuigen</h1>
        <p>selecteer een van de voertuigen om verder te gaan</p>
        <select name="VehicleId" id="VehicleId" asp-items="@(new SelectList(ViewBag.VehicleList, "Id", "LicensePlate"))" class="form-control"></select>
        <br/>
        <ul>
            <li>
                <a id="registerVehicleLink" class="nav-link text-black" asp-action="Index" asp-controller="RegisterVehicle">Registreren</a>
            </li>
            <li>
                <a id="editVehicleLink" class="nav-link text-black" asp-action="EditVehicle" asp-controller="RegisterVehicle">Aanpassen</a>
             </li>
        </ul>
        <br>
        <br/>
    </div>
</div>

}