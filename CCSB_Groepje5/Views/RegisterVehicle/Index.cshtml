@model CCSB_Groepje5.Models.ViewModels.RegisterVehicleViewModel

<h2>Voertuig registreren</h2>
<form method="post" asp-action="Register" asp-controller="RegisterVehicle">
    
    <hr />

    @*Error*@
    <div asp-validation-summary="All" class="text-danger"></div>

    @*kentekenplaat*@
    <div class="form-group row">
        <label class="col-md-2" asp-for="LicensePlate"></label>
        <div class="col-md-10">
            <input asp-for="LicensePlate" class="form-control" />
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
        </div>
    </div>

    @*Klant*@
    <div class="form-group row">
        <label class="col-md-2" asp-for="Customer"></label>
        <div class="col-md-10">
            <input asp-for="Customer" class="form-control" />
            <span asp-validation-for="Customer" class="text-danger"></span>
        </div>
    </div>

    @*Soort voertuig*@
    <div class="form-group row">
        <label class="col-md-2" asp-for="VehicleType"></label>
        <div class="col-md-10">
            <input asp-for="VehicleType" class="form-control" />
            <span asp-validation-for="VehicleType" class="text-danger"></span>
        </div>
    </div>

    @*Submit*@
    <div class="form-group">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Registreer dit voertuig" class="btn btn-success" />
        </div>
    </div>
</form>
