@model CCSB_Groepje5.Models.ViewModels.RegisterVehicleViewModel

<h4 class="titleHeader">Voeruig Registreren</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select id="customerId" asp-items="@(new SelectList(ViewBag.CustomerList, "Id", "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="LicensePlate" class="control-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleType" class="control-label"></label>
                <br/>
                Caravan <input asp-for="VehicleType" class="form-control" type="radio" name="VehicleType" value="Caravan" />
                Camper <input asp-for="VehicleType" class="form-control" type="radio" name="VehicleType" value="Camper" />
                <span asp-validation-for="VehicleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurfaceTaken" class="control-label"></label>
                
                <input asp-for="SurfaceTaken" class="form-control" />
                <span asp-validation-for="SurfaceTaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <hr />
                @ViewBag.message
                <hr />
                <input type="submit" value="Registreren" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


